// out: main.css, compress: false

@import variables

@import base
@import background
@import highlight
@import gitalk
body
    padding: 0
    margin: auto
    max-width: 44rem
    min-height: 100 vh

#container
    padding: 10px
    margin: auto

.header
    display: flex
    flex-flow: column
    align-items: baseline
    border-bottom: 3px dashed $COLOR_BG3
    border-radius: 5px
    padding: 5px
    trans(0.5s)
    margin-bottom: 1rem
    box_shadow(1px, -1, $COLOR_H2)

    hover_box_shadow_c(2px, $COLOR_TEXT)

    .header-section
        display: flex
        flex-flow: column
        align-items: baseline

        &-title.title
            color: $COLOR_TITLE
            margin-bottom: 0
            font-size: $FONT_SIZE_H1
            border-left: none
            border-radius: 10px
            &:hover
                color: $COLOR_H3

        & ul
            display: flex
            flex-flow: row nowrap
            list-style-type: none
            margin: 0
            padding: 0 0 3px 0
            border-bottom: 1px dashed $COLOR_BG3

        &-section-nav-list
            padding: 0 15px
            border-left: 2px dashed $COLOR_LINK_LIGHT

            &:nth-child(1)
                padding-left: 0
                border-left: none


.blogs-list
    display: flex
    flex-flow: column
    &-article
        padding: 5px
        margin: 10px 0
        border-radius: 5px
        box_shadow(1px, -1, c = $COLOR_H1)

        trans(0.3s)
        hover_box_shadow_c(1px, $COLOR_H4)
    &-header
        a
            font-size: $FONT_SIZE_H3
            color: $COLOR_H3
            text-decoration: none
        h3
            color: $COLOR_H3


.metas
    & > section
        margin: 10px
        display: flex
        flex-flow: row
        align-items: center
    svg
        color: $COLOR_SVG
        width: 17px!important
    span, time
        color: $COLOR_TEXT
        font-family: $FONT_FAMILY_NORMAL
        font-size: $FONT_SIZE_P
        padding: 1px 10px
        margin: 1px
    & ul
        display: flex
        flex-flow: row wrap
        padding: 1px 10px
        margin: 1px
        li
            list-style: none
        & a
            border-radius: 0
            border-bottom: 1px solid
            padding: 1px 3px
            margin-left: 5px
            text-decoration: none
            &:before
                content: " #"
                position: relative
                top: -1px
                left: -1px
            &:nth-child(1)
                margin-left: 0

    &-list-li
        padding-left: 0

.table_container
    overflow: auto
    border-radius: 5px

    trans(0.3s)
    hover_box_shadow_c(1px, $COLOR_H2)
    box_shadow(1px, 0, c = $COLOR_H1)
dt
    font-weight: bold
table
    width: 100%
    font-size: 13px
    border-collapse: collapse
    text-align: left
th
    font-size: 14px
    font-weight: bold
    color: #ffa5a5
    border-bottom: 1px dashed #ccc
    padding: 8px 8px
    min-width: 100px
    &:hover
        background-color: $COLOR_BG3T
td
    border-bottom: none
    padding: 9px 8px 0px 8px
    &:hover
        background-color: $COLOR_BG3T

#content
    display: flex
    flex-flow: column
    & > header
        display: none


.blog-header
    border-radius: 10px
    padding-bottom: 5px
    margin-bottom: 0
    trans(0.5s)
    box_shadow(1px, -1, $COLOR_H2)
    hover_box_shadow_c(2px, $COLOR_TEXT)


.h1-fixed
    top 0
    margin: auto
    background-color: $COLOR_BGT

    display: flex
    flex-flow: row
    justify-content: center
    align-items: stretch

    width: 100%
    max-width: 44rem
    border-left: 0
    border-radius: 5px
    box-shadow: 0 3px 3px $COLOR_H3
    hover_box_shadow_c(5px, $COLOR_H3)
    trans(0.5s)


.text-table-of-contents
    border: 1px dashed $COLOR_H4
    border-radius: 3px
    li
        display: flex
        flex-flow: column nowrap
        justify-content: flex-start
        align-items: stretch
    a
        width: 100%
    & > ul
        margin: 3px 0
        padding: 5px 0
        > li
            > a
                color: $COLOR_H2
                font-size: larger
                text-decoration: none
                &:before
                    content: "* "
            hover_text_shadow(2px)
            &:hover
                background-color: $COLOR_BG1T
    & > ul > li > ul
        > li
            > a
                color: $COLOR_H4
                font-size: $FONT_SIZE_P
                text-decoration: none
                &:before
                    content: "** "
            hover_text_shadow(2px)
            &:hover
                background-color: $COLOR_BG2T
    & > ul > li > ul > li > ul
        > li
            > a
                color: $COLOR_H1
                font-size: smaller
                text-decoration: none
                &:before
                    content: "*** "
            hover_text_shadow(2px)
            &:hover
                background-color: $COLOR_BG3T

#blog-content-nav
    border-top: 2px dashed $COLOR_H2
    ul
        display: flex
        flex-flow: row wrap
        justify-content: space-between
    &-last
        flex-shrink: 0
        a
            color: $COLOR_H2
        &:before
            content: "Last: "
    &-next
        flex-shrink: 0
        a
            color: $COLOR_H2
        &:before
            content: "Next: "

#footer
    border-top: 3px dashed $COLOR_H3
    section
        display: flex
        flex-flow: row
        align-items: baseline
    nav
        padding-right: 10rem
    > div, p, svg
        trans(0.3s)
        color: $COLOR_H2
        cursor: n-resize
        hover_text_shadow(3px)
        font-size: $FONT_SIZE_H3
        &:hover
            *
                color: $COLOR_H3
                font-size: larger

.footdef
    display: flex
    flex-flow: row nowrap
    & a
        color: $COLOR_LINK_LIGHT
        &:hover
            color: $COLOR_BG
            background-color: $COLOR_LINK
    & sup a
        text-decoration: none

p.footpara
    margin: 0
    padding: 0 5px
